@model IEnumerable<FitCooks.Models.Receita>

@{
    ViewData["Title"] = "getReceitas";
}

<h1>Receitas</h1>
<div class="col-xs-12" style="height:50px;"></div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Descrição</th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var receita in Model)
        {
        <tr>
            <td class="h6">@receita.nome</td>
            <td class="h6">@receita.descricao</td>
            <td><a href="/Etapas/VerEtapa?id=@receita.id_Receita"
                               class="btn btn-dark"> Iniciar Receita </a></td>

        </tr>
        }
    </tbody>

</table>