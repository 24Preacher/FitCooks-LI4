@model IEnumerable<FitCooks.Models.Receita>

@{
    ViewData["Title"] = "pesquisarReceita";
}

<h1>Receitas</h1>
<div class="col-xs-12" style="height:50px;"></div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var receita in Model)
        {
            <tr>
                <td>@receita.nome</td>
                <td>@receita.descricao</td>
            </tr>
        }
    </tbody>

</table>